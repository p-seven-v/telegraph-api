{
  "name": "p7v/telegraph-api",
  "description": "Telegra.ph API client",
  "keywords": ["telegraph", "telegra.ph", "telegram"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Alex Plekhanov",
      "email": "alex@p7v.app"
    }
  ],
  "require": {
    "php": "^7.4 || ~8.0.0 || ~8.1.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.2 || ^7.0",
    "webmozart/assert": "^1.10"
  },
  "require-dev": {
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan": "^1.3",
    "phpstan/phpstan-webmozart-assert": "^1.0",
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^4.16"
  },
  "autoload": {
    "psr-4": {
      "P7v\\TelegraphApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "replace": {
    "deploykit/telegraph-api": "*"
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox",
    "phpstan": "vendor/bin/phpstan analyse",
    "psalm": "vendor/bin/psalm"
  }
}
